{
    "manifest_version": 3,
    "name": "WBL LinkedIn Post Contact Extractor",
    "version": "1.0",
    "description": "Extracts contact information from LinkedIn job posts and logs activity to WBL backend.",
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "scripting"
    ],
    "host_permissions": [
        "https://www.linkedin.com/*",
        "https://whitebox-learning.com/*",
        "http://localhost:8000/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icons/icon128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.linkedin.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}